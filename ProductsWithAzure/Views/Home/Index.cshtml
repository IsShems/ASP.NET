@using AzureTestTurboAz.Models;
@{
    ViewData["Title"] = "Home Page";
}


<div class="row pb-3">
	@foreach (var product in @Product.Selectedproducts)
	{
		
		<div class="col-lg-3 col-md-4">
			<div class="row p-2">
				<div class="col-12 p-1">
					<a class="col-12 p-1" href="@Url.Action("ProductPage", "Home", new { productId = @product.ProductID})">
					<div class="card product-card">
						<div> 
							 <img style="height: 100%; width: 100%" src="@ViewBag.BlobSasUrl" alt="Blob Image" />
						</div>
						<div class="card-body">
							<div class="pl-1">
								<p class="card-title h5 text-primary">@product.Name</p>
								<p class="card-title text-info">by <b>@product.Color</b></p>
							    <p class="card-title h5 text-primary">@product.StandardCost</p>
							</div>
						</div>
					</div>
					</a>
				</div>
			</div>
		</div>
	}
</div>

